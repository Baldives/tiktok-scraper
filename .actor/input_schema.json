{
  "schemaVersion": 1,
  "title": "TikTok Scraper Input",
  "type": "object",
  "properties": {
    "download": {
      "title": "Download videos",
      "description": "Whether to download videos. False = metadata only.",
      "type": "boolean",
      "default": false,
      "editor": "checkbox"
    },
    "filetype": {
      "title": "Output file type",
      "description": "Type of file to save post information.",
      "type": "string",
      "enum": ["json", "csv", "all"],
      "default": "json",
      "editor": "select"
    },
    "number": {
      "title": "Number of posts",
      "description": "How many posts to scrape. 0 = all.",
      "type": "integer",
      "default": 10,
      "editor": "number"
    },
    "proxy": {
      "title": "Proxy type",
      "description": "Use Apify residential proxy.",
      "type": "string",
      "enum": ["RESIDENTIAL", "NONE"],
      "default": "RESIDENTIAL",
      "editor": "select"
    },
    "query": {
      "title": "Search query",
      "description": "Hashtag, username, or other query to scrape.",
      "type": "string",
      "default": "funnycats",
      "editor": "textfield"
    },
    "sessionFile": {
      "title": "Session file",
      "description": "Path to the file with TikTok session(s).",
      "type": "string",
      "default": "session.txt",
      "editor": "fileupload"
    },
    "type": {
      "title": "Query type",
      "description": "Type of content to scrape.",
      "type": "string",
      "enum": ["hashtag", "user", "trend", "music", "video"],
      "default": "hashtag",
      "editor": "select"
    }
  },
  "required": ["query", "type"]
}

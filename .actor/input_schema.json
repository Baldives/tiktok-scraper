{
    "title": "TikTok Scraper",
    "type": "object",
    "properties": {
        "type": {
            "title": "Scrape type",
            "type": "string",
            "description": "Choose what to scrape",
            "enum": ["user", "hashtag", "trend", "music", "video"],
            "default": "hashtag",
            "editor": "select"
        },
        "query": {
            "title": "Query",
            "type": "string",
            "description": "Username, hashtag, music ID, or video URL depending on type",
            "default": "",
            "editor": "textfield"
        },
        "number": {
            "title": "Number of posts",
            "type": "integer",
            "description": "How many posts to scrape (0 = all)",
            "default": 10,
            "editor": "number"
        },
        "filetype": {
            "title": "Output file type",
            "type": "string",
            "enum": ["json", "csv", "all"],
            "default": "json",
            "editor": "select"
        },
        "download": {
            "title": "Download videos",
            "type": "boolean",
            "description": "Enable if you want to download video files",
            "default": false,
            "editor": "checkbox"
        },
        "sessionFile": {
            "title": "Session file URL",
            "type": "string",
            "description": "URL or local path to session.txt file",
            "default": "",
            "editor": "textfield"
        },
        "apifyProxyGroups": {
            "title": "Apify proxy group",
            "type": "string",
            "description": "Apify Proxy group name (optional)",
            "default": "RESIDENTIAL",
            "editor": "textfield"
        }
    },
    "required": ["type", "query", "sessionFile"]
}

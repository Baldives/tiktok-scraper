{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "schemaVersion": 1,
    "title": "TikTok Hashtag Scraper",
    "type": "object",
    "properties": {
        "hashtag": {
            "type": "string",
            "title": "Hashtag to scrape",
            "description": "The TikTok hashtag without #",
            "editor": "textfield",
            "default": "funny"
        },
        "number": {
            "type": "integer",
            "title": "Number of posts",
            "description": "Number of videos to scrape for this hashtag",
            "editor": "number",
            "default": 20
        },
        "sessionFile": {
            "type": "string",
            "title": "Session file",
            "description": "Path to session.txt with TikTok cookies",
            "editor": "textfield",
            "default": ".actor/session.txt"
        },
        "download": {
            "type": "boolean",
            "title": "Download videos",
            "description": "Whether to download video files",
            "editor": "checkbox",
            "default": false
        },
        "filetype": {
            "type": "string",
            "title": "Output file type",
            "description": "Format for scraped metadata",
            "editor": "dropdown",
            "enum": ["json", "csv", "all"],
            "default": "json"
        }
    },
    "required": ["hashtag", "number"]
}
